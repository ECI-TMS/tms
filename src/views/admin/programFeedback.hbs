<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      
      <div class="col-12 bg-white p-4"><h3 class="fw-bold">Define Feedbacks</h3></div>
      {{#each sessions}}
        <div class="col-12 bg-white p-4 mt-4">
          Session >
          {{this.SessionID}}
          <form action="/admin/feedbacks/program/{{this.ProgramID}}/session/{{this.SessionID}}" method="post">
            <div class="container mt-4">
              <input type="hidden" name="trainer_id" value="{{this.users_trainingsessions_TrainerIDTousers.UserID}}">
              <div class="row justify-content-center">
                <div class="col-12"><span
                    class="badge text-bg-warning"
                  >Trainer</span></div>
                <div class="col-12 bg-white align-center">

                  <label
                    for="checkbox"
                    class="me-5"
                  >{{this.users_trainingsessions_TrainerIDTousers.Username}}</label>
                  <div>
                    <div class="form-check form-check-inline">

                      <input
                        class="form-check-input"
                        type="radio"
                        name="trainer_options"
                        id="textOption"
                        value="text"
                      />
                      <label
                        class="form-check-label"
                        for="textOption"
                      >Text</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="trainer_options"
                        id="starsOption"
                        value="stars"
                      />
                      <label
                        class="form-check-label"
                        for="starsOption"
                      >Stars</label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
                <div class="container mt-4">
                  <input type="hidden" name="monitor_id" value="{{this.users_trainingsessions_MonitorIDTousers.UserID}}">
              <div class="row justify-content-center">
                <div class="col-12"><span
                    class="badge text-bg-warning"
                  >Monitor</span></div>
                <div class="col-12 bg-white align-center">

                  <label
                    for="checkbox"
                    class="me-5"
                  >{{this.users_trainingsessions_MonitorIDTousers.Username}}</label>
                  <div>
                    <div class="form-check form-check-inline">

                      <input
                        class="form-check-input"
                        type="radio"
                        name="monitor_options"
                        id="textOption"
                        value="text"
                      />
                      <label
                        class="form-check-label"
                        for="textOption"
                      >Text</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="monitor_options"
                        id="starsOption"
                        value="stars"
                      />
                      <label
                        class="form-check-label"
                        for="starsOption"
                      >Stars</label>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="container mt-4">
              <div class="row">
                <div class="col-md-12">
                  <button type="submit" class="btn btn-dark">Add </button>

                </div>
              </div>
            </div>

          </form>
        </div>
      {{/each}}

    </div>

  </div>
</div>

