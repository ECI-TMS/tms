<div class="container">
  <div class="header-section">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
      <a href="/admin/user/create" class="btn-back">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back to Create User
      </a>
      <div style="text-align: center;">
        <button onclick="testSearch('admin')" style="background: #333; color: white; border: none; padding: 8px 16px; border-radius: 6px; cursor: pointer; margin: 0 5px;">Test Search "admin"</button>
        <button onclick="testSearch('')" style="background: #333; color: white; border: none; padding: 8px 16px; border-radius: 6px; cursor: pointer; margin: 0 5px;">Clear Search</button>
      </div>
    </div>
    <h1 class="page-title">User Management</h1>
    <p class="page-subtitle">Manage all system users with comprehensive control</p>
  </div>

  <div class="content-section">
    <div class="data-table-wrapper">
      <table id="usersTable" class="display">
        <thead>
          <tr>
            <th>Avatar</th>
            <th>Username</th>
            <th>Email</th>
            <th>User Type</th>
            <th>Program</th>
            <th>Created Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td>
              {{#if ProfilePicture}}
                <img src="{{ProfilePicture}}" alt="{{Username}}" class="user-avatar">
              {{else}}
                                 <div class="user-avatar" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 16px;">
                   {{substring Username 0 1}}
                 </div>
              {{/if}}
            </td>
            <td>{{Username}}</td>
            <td>{{Email}}</td>
            <td>
              <span class="user-type-badge user-type-{{lowercase UserType}}">
                {{UserType}}
              </span>
            </td>
            <td>
              {{#if programName}}
                {{programName}}
              {{else}}
                <span style="color: #9ca3af;">-</span>
              {{/if}}
            </td>
            <td>{{formatDate createdAt}}</td>
            <td class="action-buttons-cell">
              <button class="btn-view" onclick="viewUser({{UserID}})">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
                View
              </button>
              <button class="btn-edit" onclick="editUser({{UserID}})">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                  <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                </svg>
                Edit
              </button>
              <button class="btn-delete" onclick="deleteUser({{UserID}}, '{{Username}}')">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="3,6 5,6 21,6"/>
                  <path d="M19,6v14a2,2 0 0,1 -2,2H7a2,2 0 0,1 -2,-2V6m3,0V4a2,2 0 0,1 2,-2h4a2,2 0 0,1 2,2v2"/>
                </svg>
                Delete
              </button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- View User Modal -->
<div id="viewUserModal" class="modal" style="display: none;">
  <div class="modal-content">
    <div class="modal-header">
      <h2>User Details</h2>
      <span class="close" onclick="closeViewModal()">&times;</span>
    </div>
    <div class="modal-body" id="viewUserModalBody">
      <!-- User details will be loaded here -->
    </div>
  </div>
</div>

<!-- Edit User Modal -->
<div id="editUserModal" class="modal" style="display: none;">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Edit User</h2>
      <span class="close" onclick="closeEditModal()">&times;</span>
    </div>
    <div class="modal-body">
      <form id="editUserForm">
        <div class="form-group">
          <label for="editUsername">Username</label>
          <input type="text" id="editUsername" name="Username" required>
        </div>
        <div class="form-group">
          <label for="editEmail">Email</label>
          <input type="email" id="editEmail" name="Email" required>
        </div>
        <div class="form-group">
          <label for="editFirstName">First Name</label>
          <input type="text" id="editFirstName" name="FirstName">
        </div>
        <div class="form-group">
          <label for="editLastName">Last Name</label>
          <input type="text" id="editLastName" name="LastName">
        </div>
        <div class="form-group">
          <label for="editContactNumber">Contact Number</label>
          <input type="text" id="editContactNumber" name="ContactNumber">
        </div>
        <div class="form-group">
          <label for="editUserType">User Type</label>
          <select id="editUserType" name="UserType" required>
            <option value="STUDENT">Student</option>
            <option value="TRAINER">Trainer</option>
            <option value="ADMIN">Admin</option>
            <option value="MONITOR">Monitor</option>
            <option value="MANAGER">Manager</option>
            <option value="CLIENT">Client</option>
          </select>
        </div>
        <div class="form-group" id="editProgramGroup" style="display: none;">
          <label for="editProgramID">Program</label>
          <select id="editProgramID" name="ProgramID">
            <option value="">Select Program</option>
            {{#each programs}}
            <option value="{{ProgramID}}">{{Name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label for="editProfilePicture">Profile Picture</label>
          <input type="file" id="editProfilePicture" name="ProfilePicture" accept="image/*">
        </div>
        <div class="form-actions">
          <button type="submit" class="btn-primary-custom">Update User</button>
          <button type="button" class="btn-secondary" onclick="closeEditModal()">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

