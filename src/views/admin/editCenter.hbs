{{!< dashboard}}
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-6 bg-white p-4">
      <h3 class="fw-bold">Edit Center</h3>
    </div>
  </div>
</div>

<div class="container mt-4 mb-4">
  <form
    action="/admin/center/update/{{center.CenterID}}"
    method="post"
    id="centerForm"
    class="row g-3 needs-validation justify-content-center"
  >
    <div class="col-lg-6 bg-white p-5">
      <div class="row gap-4">
        
        {{! Name }}
        <div class="col-12">
          <label for="validationCustom01" class="form-label">Venue Name</label>
          <input
            type="text"
            name="Name"
            class="form-control"
            id="validationCustom01"
            value="{{center.Name}}"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        {{! City and Focal Person }}
        <div class="row">
          <div class="col-md-6">
            <label for="validationCustom02" class="form-label">City</label>
            <input
              type="text"
              name="City"
              class="form-control"
              id="validationCustom02"
              value="{{center.City}}"
              required
            />
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <div class="col-md-6">
            <label for="validationCustom03" class="form-label">Focal Person</label>
            <input
              type="text"
              name="FocalPerson"
              class="form-control"
              id="validationCustom03"
              value="{{center.FocalPerson}}"
              required
            />
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
        </div>

        {{! Seating Capacity and Computer Lab }}
        <div class="row">
          <div class="col-md-6">
            <label for="validationCustom04" class="form-label">Seating Capacity</label>
            <input
              type="number"
              name="SeatingCapacity"
              class="form-control"
              id="validationCustom04"
              value="{{center.SeatingCapacity}}"
              required
            />
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <div class="col-md-6">
            <label for="validationCustom05" class="form-label">Computer Lab</label>
            <select class="form-select" name="haveComputerLab" id="validationCustom05" required>
              <option disabled value="">Choose...</option>
              <option value="true" {{#if center.haveComputerLab}}selected{{/if}}>Yes</option>
              <option value="false" {{#unless center.haveComputerLab}}selected{{/unless}}>No</option>
            </select>
            <div class="invalid-feedback">
              Please select a valid Option.
            </div>
          </div>
        </div>

        <div class="col-12">
          <button class="btn btn-primary" id="updateButton" type="submit">
            Update Center
          </button>
          <a href="/admin/centers" class="btn btn-secondary ms-2">Cancel</a>
        </div>

      </div>
    </div>
  </form>
</div>

<script defer src="/js/admin/editCenter.js"></script>
