{{!< dashboard}} 
<style>
  body {
    font-family: 'Poppins', sans-serif;
    background-color: #fff;
    color: #000;
    margin: 0;
    padding: 20px 30px;
  }

  .content {
    max-width: 1200px;
    margin: 0 auto;
  }

  h3.text-dark {
    color: #2E5A92;
    font-weight: 600;
    margin-top: 40px;
    margin-bottom: 20px;
    border-bottom: 2px solid #2E5A92;
    padding-bottom: 8px;
  }

  table {
    width: 100%;
    margin-bottom: 50px;
    border-collapse: separate;
    border-spacing: 0 8px;
    box-shadow: 0 2px 6px rgb(0 0 0 / 0.1);
  }

  thead tr {
    background-color: #2E5A92;
    color: #fff;
  }

  thead th {
    padding: 14px 12px;
    font-weight: 600;
    text-align: center;
    border-radius: 8px 8px 0 0;
    user-select: none;
  }

  tbody tr {
    background-color: #fff;
    transition: background-color 0.3s ease;
    box-shadow: 0 1px 3px rgb(0 0 0 / 0.1);
    cursor: default;
  }

  tbody tr:hover {
    background-color: #f0f7ff;
    box-shadow: 0 4px 8px rgb(46 90 146 / 0.15);
  }

  tbody tr:nth-child(odd) {
    background-color: #fafafa;
  }

  tbody td {
    padding: 14px 12px;
    text-align: center;
    vertical-align: middle;
    font-size: 0.95rem;
    color: #333;
    border-radius: 0 0 8px 8px;
  }

  /* Column widths */
  th:nth-child(1), td:nth-child(1) { width: 5%; }
  th:nth-child(2), td:nth-child(2) { width: 25%; }
  th:nth-child(3), td:nth-child(3) { width: 25%; }
  th:nth-child(4), td:nth-child(4) { width: 30%; }

  a.btn.btn-primary {
    display: inline-block;
    padding: 6px 15px;
    font-size: 0.9rem;
    font-weight: 600;
    color: #fff;
    background-color: #2E5A92;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  a.btn.btn-primary:hover,
  a.btn.btn-primary:focus {
    background-color: #1f3f66;
    outline: none;
  }

  .pending {
    color: black;
    background-color: yellow;
    padding: 4px 8px;
    border-radius: 4px;
    font-weight: 600;
  }

  .container {
    display: flex;
    justify-content: center;
    padding: 10px 0;
  }
</style>

<link rel="stylesheet" href="/css/admin/programs.css" />

<div class="content">
  <h3 class="text-dark">Uploaded Reports</h3>
  <table id="monitors">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Monitor/Trainer</th>
        <th>File</th>
      </tr>
    </thead>
    <tbody>
      {{#each allReports}}
      <tr data-report-id="{{this.ReportID}}">
        <td>{{this.ReportID}}</td>
        <td>{{this.Name}}</td>
        <td>{{this.targetRole}}</td>
        <td>
          <a download="true" class="btn btn-primary" href='{{this.FilePath}}'>Download</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <h3 class="text-dark">Submitted Reports</h3>
  <table id="submitted_reports">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Name</th>
        <th>Monitor/Trainer</th>
        <th>File</th>
      </tr>
    </thead>
    <tbody>
      {{#each submittedReports}}
      <tr data-report-id="{{this.ReportID}}">
        <td>{{this.UserID}}</td>
        <td>{{this.users.Username}}</td>
        <td>{{this.report.Name}}</td>
        <td>{{this.submitRole}}</td>
        <td>
          <a download="true" class="btn btn-primary" href='{{this.FilePath}}'>Download</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script defer src="/js/admin/all_reports.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const deleteButtons = document.querySelectorAll('.delete-report');

    deleteButtons.forEach(button => {
      button.addEventListener('click', async function () {
        const reportRow = button.closest('tr');
        const reportId = reportRow.getAttribute('data-report-id');

        const confirmation = confirm('Are you sure you want to delete this report?');
        if (confirmation) {
          try {
            const response = await fetch(`/allReports/${reportId}`, {
              method: 'DELETE',
              headers: {
                'Content-Type': 'application/json',
              },
            });

            if (response.ok) {
              reportRow.remove();
              alert('Report deleted successfully');
            } else {
              alert('Failed to delete report');
            }
          } catch (error) {
            console.error('Error deleting report:', error);
            alert('An error occurred while deleting the report.');
          }
        }
      });
    });
  });
</script>
