<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 30px;
  }

  .header-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    background: white;
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(46, 90, 146, 0.1);
    border-left: 5px solid #2E5A92;
  }

  .page-title {
    font-size: 28px;
    font-weight: 700;
    color: #2E5A92;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .title-icon {
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, #2E5A92, #4a7bc8);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
  }

  .action-buttons {
    display: flex;
    gap: 15px;
  }

  .add-button {
    background: linear-gradient(135deg, #2E5A92, #4a7bc8);
    color: white;
    padding: 12px 24px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(46, 90, 146, 0.3);
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .add-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(46, 90, 146, 0.4);
    background: linear-gradient(135deg, #4a7bc8, #2E5A92);
  }

  .bulk-button {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
    padding: 12px 24px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .bulk-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
    background: linear-gradient(135deg, #20c997, #28a745);
  }

  .table-container {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(46, 90, 146, 0.1);
    border: 1px solid rgba(46, 90, 146, 0.1);
  }

  .table-header {
    background: linear-gradient(135deg, #2E5A92, #4a7bc8);
    padding: 20px 25px;
    color: white;
  }

  .table-title {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .table-subtitle {
    opacity: 0.9;
    font-size: 14px;
  }

  #example {
    width: 100% !important;
    border-collapse: collapse;
    background: white;
    margin: 0 !important;
  }

  #example thead {
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  }

  #example th {
    padding: 18px 20px !important;
    text-align: left !important;
    font-weight: 600 !important;
    color: #2E5A92 !important;
    font-size: 14px !important;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-bottom: 2px solid rgba(46, 90, 146, 0.1) !important;
    background: none !important;
  }

  #example td {
    padding: 16px 20px !important;
    border-bottom: 1px solid #f1f3f4 !important;
    color: #495057 !important;
    font-size: 14px !important;
    vertical-align: middle !important;
  }

  #example tbody tr {
    transition: all 0.2s ease;
    background: white !important;
  }

  #example tbody tr:nth-child(odd) {
    background: #f8f9fa !important;
  }

  #example tbody tr:hover {
    background: rgba(46, 90, 146, 0.05) !important;
    transform: scale(1.001);
  }

  .participant-id {
    font-weight: 600;
    color: #2E5A92;
    background: rgba(46, 90, 146, 0.1);
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
  }

  .participant-name {
    font-weight: 600;
    color: #2E5A92;
  }

  .contact-info {
    font-size: 13px;
    color: #6c757d;
  }

  .session-badge {
    background: linear-gradient(135deg, #17a2b8, #20c997);
    color: white;
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
  }

  .action-btn {
    width: 32px;
    height: 32px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    position: relative;
    margin-right: 5px;
  }

  .delete-btn {
    background: rgba(220, 53, 69, 0.1);
    color: #dc3545;
    border: 1px solid rgba(220, 53, 69, 0.2);
  }

  .delete-btn:hover {
    background: #dc3545;
    color: white;
    transform: scale(1.1);
    box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
  }

  .edit-btn {
    background: rgba(255, 193, 7, 0.1);
    color: #ffc107;
    border: 1px solid rgba(255, 193, 7, 0.2);
  }

  .edit-btn:hover {
    background: #ffc107;
    color: #212529;
    transform: scale(1.1);
    box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
  }

  /* Modal Styles */
  .modal-content {
    border: none;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    overflow: hidden;
  }

  .modal-header {
    background: linear-gradient(135deg, #2E5A92, #4a7bc8);
    color: white;
    padding: 20px 25px;
    border-bottom: none;
  }

  .modal-title {
    font-weight: 600;
    font-size: 18px;
  }

  .btn-close {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    width: 30px;
    height: 30px;
    opacity: 1;
  }

  .btn-close:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  .modal-body {
    padding: 30px;
    background: #f8f9fa;
  }

  .form-label {
    font-weight: 600;
    color: #2E5A92;
    margin-bottom: 8px;
  }

  .form-control, .form-select {
    border: 2px solid #e9ecef;
    border-radius: 8px;
    padding: 12px 16px;
    font-size: 14px;
    transition: all 0.3s ease;
    background: white;
  }

  .form-control:focus, .form-select:focus {
    border-color: #2E5A92;
    box-shadow: 0 0 0 3px rgba(46, 90, 146, 0.1);
    outline: none;
  }

  .btn-primary {
    background: linear-gradient(135deg, #2E5A92, #4a7bc8);
    border: none;
    padding: 12px 30px;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(46, 90, 146, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(46, 90, 146, 0.4);
    background: linear-gradient(135deg, #4a7bc8, #2E5A92);
  }

  .file-upload-area {
    border: 2px dashed #2E5A92;
    border-radius: 12px;
    padding: 40px;
    text-align: center;
    background: rgba(46, 90, 146, 0.05);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .file-upload-area:hover {
    background: rgba(46, 90, 146, 0.1);
    border-color: #4a7bc8;
  }

  .file-upload-icon {
    font-size: 48px;
    color: #2E5A92;
    margin-bottom: 16px;
  }

  .file-upload-text {
    color: #2E5A92;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .file-upload-subtext {
    color: #6c757d;
    font-size: 14px;
  }

  .file-preview-area {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 2px solid #2E5A92;
    border-radius: 12px;
    padding: 20px;
    background: rgba(46, 90, 146, 0.05);
    cursor: pointer;
  }

  .file-preview-icon {
    font-size: 48px;
    color: #2E5A92;
  }
  
  .file-preview-info {
    flex-grow: 1;
    margin-left: 20px;
  }

  .file-preview-name {
    color: #2E5A92;
    font-weight: 600;
    display: block;
  }

  .file-preview-size {
    color: #6c757d;
    font-size: 14px;
  }

  .file-preview-remove-btn {
    background: none;
    border: none;
    font-size: 24px;
    color: #dc3545;
    cursor: pointer;
  }

  /* DataTables Custom Styling */
  .dataTables_wrapper .dataTables_length,
  .dataTables_wrapper .dataTables_filter,
  .dataTables_wrapper .dataTables_info,
  .dataTables_wrapper .dataTables_paginate {
    padding: 20px 25px;
  }

  .dataTables_wrapper .dataTables_filter input {
    border: 2px solid #e9ecef;
    border-radius: 8px;
    padding: 8px 12px;
    margin-left: 10px;
  }

  .dataTables_wrapper .dataTables_filter input:focus {
    border-color: #2E5A92;
    outline: none;
  }

  .dataTables_wrapper .dataTables_paginate .paginate_button {
    border: 1px solid #dee2e6;
    background: white;
    color: #495057;
    border-radius: 4px;
    padding: 8px 12px;
    margin: 0 2px;
    transition: all 0.2s ease;
  }

  .dataTables_wrapper .dataTables_paginate .paginate_button:hover,
  .dataTables_wrapper .dataTables_paginate .paginate_button.current {
    background: #2E5A92 !important;
    color: white !important;
    border-color: #2E5A92 !important;
  }

  .valid-feedback {
    color: #28a745;
    font-size: 12px;
    margin-top: 4px;
    display: none;
  }

  .invalid-feedback {
    color: #dc3545;
    font-size: 12px;
    margin-top: 4px;
  }

  /* Loading Spinner Styles */
  .spinner-border-sm {
    width: 1rem;
    height: 1rem;
    border-width: 0.2em;
  }

  .btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .btn.loading {
    position: relative;
    pointer-events: none;
  }

  .btn.loading #uploadIcon,
  .btn.loading #uploadText {
    opacity: 0;
  }

  .btn.loading #uploadSpinner {
    display: flex !important;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .container {
      padding: 15px;
    }
    
    .header-section {
      flex-direction: column;
      gap: 20px;
      text-align: center;
    }
    
    .action-buttons {
      flex-direction: column;
      width: 100%;
    }
    
    .add-button, .bulk-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<div class="container">
  <div class="header-section">
    <div class="page-title">
      <div class="title-icon">ðŸ‘¥</div>
      Participants Management 
    </div>
    <div class="action-buttons">
      <button
        class="add-button"
        data-bs-toggle="modal"
        data-bs-target="#addProgram"
      >
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
        </svg>
        Add Participant
      </button>
      <button
        class="bulk-button"
        data-bs-toggle="modal"
        data-bs-target="#fileDialog"
      >
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
        </svg>
        Create Bulk
      </button>
    </div>
  </div>

  <div class="table-container">
    <div class="table-header">
      <div class="table-title">Participants Directory</div>
      <div class="table-subtitle">Manage and monitor all participants</div>
    </div>

    <table id="example" class="table table-striped">
      <thead>
        <tr>
          <th>S NO</th>
          <th>Name</th>
          <th>Session</th>
          <th>CNIC</th>
          <th>Email</th>
          <th>Contact</th>
          
        </tr>
      </thead>
      <tbody>
        {{#each participants}}
          <tr data-participant-id="{{id}}">
            {{!-- <td><span class="participant-id">#{{id}}</span></td> --}}
            <td>{{incrementIndex @index}}</td>
            <td><span class="participant-name">{{name}}</span></td>
            <td><span class="session-badge">{{sessionId}}</span></td>
            <td>{{cnic}}</td>
            <td><span class="contact-info">{{email}}</span></td>
            <td><span class="contact-info">{{contact}}</span></td>
          
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<!-- File Upload Modal -->
<div
  class="modal fade"
  id="fileDialog"
  tabindex="-1"
  aria-labelledby="fileDialogLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="fileDialogLabel">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 8px;">
            <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
          </svg>
          Bulk Import Participants 
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="uploadForm" enctype="multipart/form-data">
          <div class="file-upload-area" id="file-drop-zone" onclick="document.getElementById('fileInput').click()">
            <div class="file-upload-icon">ðŸ“Š</div>
            <div class="file-upload-text">Click to upload Excel file</div>
            <div class="file-upload-subtext">Supports .xlsx, .xls files up to 10MB</div>
            <input
              type="file"
              name="file"
              class="form-control"
              id="fileInput"
              accept=".xlsx,.xls"
              style="display: none;"
              required
            />
          </div>
          <div id="file-preview" style="display: none;">
              <div class="file-preview-icon">ðŸ“„</div>
              <div class="file-preview-info">
                  <span id="file-name" class="file-preview-name"></span>
                  <span id="file-size" class="file-preview-size"></span>
              </div>
              <button type="button" id="remove-file-btn" class="file-preview-remove-btn">&times;</button>
          </div>
          
  
          <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-primary" id="uploadButton">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 8px;" id="uploadIcon">
                <path d="M9,16V10H5L12,3L19,10H15V16H9M5,20V18H19V20H5Z"/>
              </svg>
              <span id="uploadText">Upload & Import</span>
              <div id="uploadSpinner" style="display: none;">
                <div class="spinner-border spinner-border-sm" role="status" style="margin-right: 8px;">
                  <span class="visually-hidden">Loading...</span>
                </div>
                <span>Processing...</span>
              </div>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Add Single Participant Modal -->
<div
  class="modal fade"
  id="addProgram"
  tabindex="-1"
  aria-labelledby="addProgramLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addProgramLabel">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 8px;">
            <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 7V9H21ZM3 9V7L9 7V9H3ZM15 11V13H21V11H15ZM3 11V13H9V11H3ZM12 8C8.69 8 6 10.69 6 14S8.69 20 12 20 18 17.31 18 14 15.31 8 12 8ZM12 18C9.79 18 8 16.21 8 14S9.79 10 12 10 16 11.79 16 14 14.21 18 12 18Z"/>
          </svg>
          Add New Participant 
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form
          action="/participant/create"
          method="post"
          class="row g-3 needs-validation"
          novalidate
        >
        <input type="hidden" name="program_id" value="{{programId}}">
        <input type="hidden" name="course_id" value="{{courseId}}">
        <input type="hidden" name="sessionId" value="{{sessionId}}">
        
          <div class="col-12">
            <label for="validationCustom01" class="form-label">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 6px;">
                <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM12 8C8.69 8 6 10.69 6 14S8.69 20 12 20 18 17.31 18 14 15.31 8 12 8Z"/>
              </svg>
              Full Name
            </label>
            <input
              type="text"
              name="name"
              class="form-control"
              id="validationCustom01"
              placeholder="Enter participant's full name"
              required
            />
            <div class="valid-feedback">Perfect! Name looks good.</div>
          </div>
          
          <div class="col-md-6">
            <label for="validationCustom02" class="form-label">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 6px;">
                <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
              </svg>
              CNIC Number
            </label>
            <input
              type="text"
              name="cnic"
              class="form-control"
              id="validationCustom02"
              placeholder="e.g., 17301-0429538-3"
              required
              novalidate
            />
            <div class="valid-feedback">CNIC format is correct.</div>
            <div class="invalid-feedback">Please enter a valid CNIC in the format: 17301-0429538-3</div>
          </div>
          
          <div class="col-md-6">
            <label for="validationCustom03" class="form-label">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 6px;">
                <path d="M20,8L12,13L4,8V6L12,11L20,6M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,5.11 21.1,4 20,4Z"/>
              </svg>
              Email Address
            </label>
            <input
              type="email"
              name="email"
              class="form-control"
              id="validationCustom03"
              placeholder="participant@example.com"
              required
            />
            <div class="invalid-feedback">Please provide a valid email address.</div>
          </div>
          
          <div class="col-md-6">
            <label for="validationCustom04" class="form-label">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 6px;">
                <path d="M6.62,10.79C8.06,13.62 10.38,15.94 13.21,17.38L15.41,15.18C15.69,14.9 16.08,14.82 16.43,14.93C17.55,15.3 18.75,15.5 20,15.5A1,1 0 0,1 21,16.5V20A1,1 0 0,1 20,21A17,17 0 0,1 3,4A1,1 0 0,1 4,3H7.5A1,1 0 0,1 8.5,4C8.5,5.25 8.7,6.45 9.07,7.57C9.18,7.92 9.1,8.31 8.82,8.59L6.62,10.79Z"/>
              </svg>
              Contact Number
            </label>
            <input
              type="text"
              name="contact"
              class="form-control"
              id="validationCustom04"
                             placeholder="e.g., 03088429785 (11 digits)"
              required
            />
            <div class="valid-feedback">Contact number format is correct.</div>
                         <div class="invalid-feedback">Please enter a valid contact number (11 digits)</div>
          </div>
          


          <div class="col-12 d-flex justify-content-end gap-3 mt-4">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button class="btn btn-primary" type="submit">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 8px;">
                <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
              </svg>
              Add Participant
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

