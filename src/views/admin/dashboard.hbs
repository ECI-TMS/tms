{{!< dashboard}}   

<style>
  /* Cards container: 3 cards per row fixed */
  .cards-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 1rem; /* reduced margin to add heading below */
  }

  /* Individual card styling */
  .card {
    background: linear-gradient(135deg, #2E5A92 0%, #3B73B9 100%);
    color: #fff;
    border-radius: 14px;
    padding: 1.8rem 1.5rem;
    box-shadow: 0 6px 20px rgba(46, 90, 146, 0.35);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: background 0.3s ease, box-shadow 0.3s ease, transform 0.2s ease;
    text-decoration: none; /* remove underline from link */
    cursor: pointer;
  }

  .card:hover {
    background: linear-gradient(135deg, #254870 0%, #3160a5 100%);
    box-shadow: 0 10px 30px rgba(37, 72, 112, 0.5);
    transform: translateY(-5px);
  }

  /* Count number */
  .card .count {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  /* Card title */
  .card .title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0.6rem 0 1.3rem 0;
    letter-spacing: 0.04em;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  /* View details link */
  .card .view-details {
    align-self: flex-start;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: underline;
    color: #bbe1fa;
    transition: color 0.3s ease;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .card .view-details:hover {
    color: #d0e7ff;
  }

  /* Chart container full width and spacing */
  .chart-container {
    width: 100%;
    margin-bottom: 3.5rem;
    padding: 0 0.5rem;
  }

  .chart-container h2 {
    color: #2E5A92;
    margin-bottom: 1.3rem;
    font-weight: 700;
    font-size: 1.6rem;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  /* Canvas full width and fixed height */
  .chart-container > div {
    width: 100% !important;
    max-width: 700px;
    height: 320px !important;
    margin: 0 auto;
  }

  /* Content container with padding */
  .content {
    padding: 2rem 2.5rem;
    margin: 0 auto;
  }

  /* Heading below cards for charts */
  .charts-heading-container {
    margin-top: 3rem; /* added top margin */
    text-align: center;
  }

  .charts-heading-container h1 {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 700;
    font-size: 2rem;
    color: #2E5A92;
    margin: 0;
  }
</style>

<div class="content">
  <!-- Cards container -->
  <div class="cards-container">
  <a href="/admin/programs" class="card">
    <div class="count">{{counts.programs}}</div>
    <div class="title">Programs</div>
    <div class="view-details">View Details</div>
  </a>
  
  <a href="/admin/trainers" class="card">
    <div class="count">{{counts.trainers}}</div>
    <div class="title">Trainers</div>
    <div class="view-details">View Details</div>
  </a>
  <a href="/admin/monitors" class="card">
    <div class="count">{{counts.monitors}}</div>
    <div class="title">Monitors</div>
    <div class="view-details">View Details</div>
  </a>
  <a href="/admin/dashboard" class="card">
    <div class="count">{{counts.trainingsessions}}</div>
    <div class="title">Sessions</div>
    
  </a>
  <a href="/admin/dashboard" class="card">
    <div class="count">{{counts.participants}}</div>
    <div class="title">Participants</div>
    
  </a>
  <a href="/admin/dashboard" class="card">
    <div class="count">{{counts.courses}}</div>
    <div class="title">Courses</div>
    
  </a>
</div>

</div>

<!-- Separate container for heading above charts -->
<div class="charts-heading-container">
  <h1>Dashboard Charts Overview</h1>
</div>

<div class="content">
  <!-- Charts full width, one per row -->
  <div class="chart-container">
    <h2>Program Overview</h2>
    <div>
      <canvas id="programOverviewChart" style="width: 100%; height: 100%;"></canvas>
    </div>
  </div>

  <div class="chart-container">
    <h2>Thematic Area</h2>
    <div>
      <canvas id="trainersChart" style="width: 100%; height: 100%;"></canvas>
    </div>
  </div>

  <div class="chart-container">
    <h2>Students Progress</h2>
    <div>
      <canvas id="gendersChart" style="width: 100%; height: 100%;"></canvas>
    </div>
  </div>
</div>
