{{!< dashboard}} 

<style>


    .container {
    display: flex;
    
    }

    .liOption {
  padding: 3px 15px;
  border-radius: 5px;
  background-color: #2e5a92;
  color: white;
  }


    .main-content {
    display: flex;
    justify-content: center;
    width: 100%;
    }

    table {
    width: 100%;
    margin: 50px;
    table-layout: fixed;
    border-collapse: collapse;
    }

    th, td {
    padding: 15px;
    text-align: left;
    font-size: 16px;
    }

    th {
    background-color: #2E5A92;
    color: #fff;
    }

    table, th, td {
    width: 1fr;
    text-align: center;
    }

    table tbody tr {
    background-color: white;
    }

    table tbody tr:nth-child(odd) {
    background-color: #f2f2f2;
    }

    table thead th {
    border: none;
    }

    .grade-input {
    width: 80px;
    padding: 5px;
    font-size: 16px;
    }

    .download-btn {
    background-color: #2E5A92;
    color: white;
    border: 1px solid white;
    border-radius: 4px;
    cursor: pointer;
    padding: 2px;
    }

    .download-btn:hover {
    background-color: white;
    color: #2E5A92;
    }

    .add-button{
    margin-top: 20px;
    margin-left:130px;
    background-color: #2E5A92;
    color:white;
    padding: 5px 10px;
    }

   ul.quizoptions {
  display: flex;
  
  flex-wrap: nowrap;
  justify-content: center;
  list-style-type: none;
  padding: 0;
  margin: 0;
}

li {
  margin-right: 25px;
}
    </style>
        
    <div class="main-content">
  <table>
    <thead>
      <tr>
        <th>question</th>
        <th>options</th>
        <th>answer</th>
      </tr>
    </thead>
    <tbody>
      {{#each questions}}
      <tr>
        <td>Q{{incrementIndex @index}}. {{this.question}}</td>
        <td>
          <ul  class="quizoptions">
            {{#each options}}
            <li class="liOption" >{{this.value}}</li>
            {{/each}}
          </ul>

        

        </td>
        <td>{{this.answer}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
    </div>

    