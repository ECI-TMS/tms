{{!< dashboard}} 
<style></style>
<div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-lg-6 bg-white p-4 text-center">
        <h3 class="fw-bold">Add Report</h3>
      </div>
    </div>
  </div>
  <form action="/admin/reports/add-report" method="POST" enctype="multipart/form-data">
    <div class="container mt-4">
      <input type="hidden" name="monitor_check" id="monitor_check">
      <input type="hidden" name="trainer_check" id="trainer_check">
      <div class="row justify-content-center ">
        <div class="col-lg-6 bg-white p-5">
          <div class="row gap-4">
            <div class="col-12">
              <label for="name" class="form-label">Name</label>
              <input type="text" name="Name" class="form-control input" id="name" value="{{session.Course}}" required />
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            {{!-- Session --}}
            <div class="row">
              <div class="col-md-12">
                <label for="SessionID" class="form-label">Session</label>
                <select class="form-select input" name="SessionID" id="SessionID">
                  <option selected disabled value="">Choose...</option>
                  {{#each programs}}
                    <option disabled>-- {{this.Name}} --</option>
                    {{#each this.trainingsessions}}
                      <option class="mx-4" value="{{this.SessionID}}" data-program-id="{{../ProgramID}}">Session : {{this.SessionID}}</option>
                    {{/each}}
                  {{/each}}
                </select>
                <div class="invalid-feedback">
                  Please select a valid Session.
                </div>
              </div>
            </div>
            {{!-- file --}}
            <div class="col-md-12 mx-auto">
              <label for="template" class="form-label">Template</label>
              <input type="file" name="template" class="form-control" id="template" required />
              <div class="invalid-feedback">
                Please provide a valid Criteria.
              </div>
            </div>
            {{!-- radio buttons --}}
            <div class="col-md-12">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDisabled" id="flexRadioDisabled">
                <label class="form-check-label" for="flexRadioDisabled">
                  Is for monitor
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDisabled" id="flexRadioCheckedDisabled">
                <label class="form-check-label" for="flexRadioCheckedDisabled">
                  Is for trainer
                </label>
              </div>
            </div>
            <div class="col-12">
              <button class="btn btn-primary" id="uploadButton" type="submit">Submit</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>

<script src="/js/addReport.js"></script>
