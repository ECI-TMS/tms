{{!< dashboard}}

<link rel="stylesheet" href="/css/admin/programs.css" />


<style>
  body {
    font-family: 'Poppins', sans-serif;
    background-color: #fff;
    color: #000;
  }

  .section-heading {
    color: #2E5A92;
    font-size: 28px;
    font-weight: bold;
    text-align: center;
    margin: 30px 0 20px;
    border-bottom: 2px solid #2E5A92;
    display: inline-block;
    padding-bottom: 5px;
  }

  table {
    width: 100%;
    margin: 0 auto 40px;
    border-collapse: collapse;
    table-layout: fixed;
  }

  thead {
    background-color: #2E5A92;
    color: white;
  }

  th, td {
    padding: 15px;
    text-align: center;
  }

  tbody tr:nth-child(odd) {
    background-color: #f2f2f2;
  }

  .action-btn {
    background-color: red;
    color: white;
    border: none;
    padding: 6px 12px;
    border-radius: 4px;
    cursor: pointer;
  }

  .action-btn:hover {
    background-color: darkred;
  }
