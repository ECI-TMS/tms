<div class="content">
  <div style="text-align: center;">
  <h2 class="section-heading">Manage Monitors</h2>
</div>



  <table id="monitors">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Program</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each monitors}}
      <tr>
        <td>{{this.UserID}}</td>
        <td>{{this.Username}}</td>
        <td>{{#if this.program}}{{this.program.Name}}{{else}}â€”{{/if}}</td>
        <td>
          <button class="action-btn" onclick="deleteMonitor('{{this.UserID}}', '{{this.Username}}')">Delete</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>


