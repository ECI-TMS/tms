    color: var(--primary-color);
    font-size: 1.1rem;
  }

  .course-name-link {
    color: var(--primary-color);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .course-name-link:hover {
    color: var(--primary-hover);
    text-decoration: none;
  }

  .sessions-badge {
    background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
    color: white;
