    --primary-color: #2E5A92;
    --primary-hover: #1e3a5f;
    --primary-light: rgba(46, 90, 146, 0.1);
    --success-color: #28a745;
    --danger-color: #dc3545;
  }

  /* Professional DataTable Styling */
