       </thead>
       <tbody>
         {{#each sessions}}
         <tr>
           <td>{{incrementIndex @index}}</td>
           <td>
             <span style="background: #2E5A92; color: white; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: 600;">
               {{this.SessionID}}
             </span>
           </td>
           <td>
             <a href="/admin/program/{{../programId}}/course/{{../courseId}}/sessions/{{this.SessionID}}"
