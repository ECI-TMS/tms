<style></style>
<div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-lg-6 bg-white p-4 text-center">
        <h3 class="fw-bold">Add Deliverable</h3>
      </div>
    </div>
  </div>
  <form action="/trainer/deliverables/AddDeliverable" method="POST" enctype="multipart/form-data">
    <div class="container mt-4">
      <div class="row justify-content-center ">
        <div class="col-lg-6 bg-white p-5">
          <div class="row gap-4">
            <div class="col-12">
              {{!-- <label for="userID" class="form-label">Title</label> --}}
              <input type="text" hidden name="UserID" class="form-control input" id="userID" value="{{user.UserID}}" />
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="col-12">
              <label for="name" class="form-label">Title</label>
              <input type="text" name="Title" class="form-control input" id="name" required />
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            {{!-- file --}}
            <div class="col-md-12 mx-auto">
              <label for="template" class="form-label">File</label>
              <input type="file" name="template" class="form-control" id="template" required />
              <div class="invalid-feedback">
                Please provide a valid Criteria.
              </div>
            </div>
            <div class="col-12">
              <button class="btn btn-primary" id="uploadButton" type="submit">Submit</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>

